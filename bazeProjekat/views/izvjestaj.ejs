  <script>
    const forma1 = document.getElementById('forma1');
    const forma2 = document.getElementById('forma2');
    const forma3 = document.getElementById('forma3');
    const forma4 = document.getElementById('forma4');
    const forma5 = document.getElementById('forma5');
    const forma6 = document.getElementById('forma6');

    function prikazi(x){
        if(x === 1) {
          forma1.style.display = 'block';
          forma2.style.display = 'none';
          forma3.style.display = 'none';
          forma4.style.display = 'none';
          forma5.style.display = 'none';
          forma6.style.display = 'none';
        }
      else if(x === 2) {
        forma1.style.display = 'none';
        forma2.style.display = 'block';
        forma3.style.display = 'none';
        forma4.style.display = 'none';
        forma5.style.display = 'none';
        forma6.style.display = 'none';
      }
      else if(x === 3) {
        forma1.style.display = 'none';
        forma2.style.display = 'none';
        forma3.style.display = 'block';
        forma4.style.display = 'none';
        forma5.style.display = 'none';
        forma6.style.display = 'none';
      }
      else if(x === 4) {
        forma1.style.display = 'none';
        forma2.style.display = 'none';
        forma3.style.display = 'none';
        forma4.style.display = 'block';
        forma5.style.display = 'none';
        forma6.style.display = 'none';
